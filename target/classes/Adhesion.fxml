<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AdhesionController">
    <children>
        <!-- Payment Details -->
        <Text layoutX="220.0" layoutY="67.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Details d'Adhesion">
            <font>
                <Font size="17.0" />
            </font>
        </Text>
        <!-- Date Pickers -->
        <HBox />
        <!-- Total Label -->
        <Label layoutX="119.0" layoutY="292.0" prefHeight="17.0" prefWidth="30.0" text="Total" />
        <!-- Payment Button -->
        <Button fx:id="payerButton" layoutX="115.0" layoutY="326.0" mnemonicParsing="false" onAction="#loadPaiementInterface" prefHeight="25.0" prefWidth="350.0" text="Payer">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>
        <!-- Price Label -->
        <Label fx:id="priceLabel" layoutX="151.0" layoutY="292.0" />
        <DatePicker fx:id="dateDebutPicker" layoutX="94.0" layoutY="112.0" promptText="date debut" />
        <Button fx:id="calculateButton" layoutX="115.0" layoutY="246.0" mnemonicParsing="false" onAction="#initialize" text="Calculate Price" />
        <!-- Remaining Time Label -->
        <Label fx:id="remainingTimeLabel" layoutX="256.0" layoutY="210.0" text="Remaining Time:" />
        <DatePicker fx:id="dateFinPicker" layoutX="312.0" layoutY="112.0" promptText="date fin" />
    </children>
</AnchorPane>
